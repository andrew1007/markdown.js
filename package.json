{
  "name": "takor",
  "version": "1.0.1",
  "description": "Comprehensive and flexible runtime type assertion",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build && node dist/index.js",
    "dev": "npm run build && nodemon dist/index.js",
    "lint": "eslint src/*.ts",
    "lint:fix": "eslint src/*.ts --fix",
    "test": "node scripts/test.js",
    "ship": "npm run preflight && npm run build && npm publish",
    "preflight": "ts-node ./src/utils/preflight.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrew1007/takor"
  },
  "keywords": [
    "type-enforce",
    "type-check",
    "npm",
    "package",
    "type",
    "validation",
    "takor"
  ],
  "author": "Andrew Yueh <yueh.andrew@gmail.com> (http://andrewyueh.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrew1007/takor/issues"
  },
  "homepage": "https://github.com/andrew1007/takor",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/node": "^12.7.3",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.0",
    "babel-loader": "8.1.0",
    "eslint": "^7.25.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-testing-library": "^3.9.2",
    "jest": "^25.1.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-jest": "^25.5.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.9.10",
    "typescript-eslint": "^0.0.1-alpha.0",
    "typings": "^2.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json",
        "isolatedModules": true
      }
    }
  }
}
